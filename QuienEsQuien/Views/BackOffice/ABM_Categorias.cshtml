@using QuienEsQuien.Models
@{
    ViewBag.Title = "ABM_Categorias";
}
<head>
    <link href="~/Styles/Estilos1.css" rel="stylesheet" />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/Cosa.css" rel="stylesheet" />

</head>
<body class="w3-black">
<div class="w3-padding-large" id="main">
    
        <h2>ABM_Categorias</h2>

        <h2>ABM</h2>
        <h3>@Html.ActionLink("Ingresar Categoria", "EdicionCategoria", "BackOfficeController", new { Accion = "Insertar" }, null);</h3>

        <table align="center" bordercolor="Black" width="350px">
            @foreach (Categorias MiCategoria in ViewBag.Lista)
            {

                <tr>
                    <td>
                        <h3> @MiCategoria.Nombre</h3>
                    </td>

                    <td>
                        <h3> @Html.ActionLink("M", "EdicionCategoria", "BackOfficeController", new { Accion = "Modificar", ID = MiCategoria.IdCategoria }, null);</h3>
                    </td>
                    <td>
                        <h3> @Html.ActionLink("V", "EdicionCategoria", "BackOfficeController", new { Accion = "Ver", ID = MiCategoria.IdCategoria }, null);</h3>
                    </td>
                    <td>
                        <h3> @Html.ActionLink("E", "EdicionCategoria", "BackOfficeController", new { Accion = "Eliminar", ID = MiCategoria.IdCategoria }, null);</h3>
                    </td>

                </tr>
            }
        </table>
    </div>
    </body>
